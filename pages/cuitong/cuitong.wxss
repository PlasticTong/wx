/* 学习进度特殊样式 */
.learning-progress {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.progress-chart {
  width: 200px;
  height: 200px;
  margin: 20px 0;
}

.progress-text {
  font-size: 16px;
  color: #333;
  margin-top: 15px;
}

.card-title {
  font-size: 18px;
  font-weight: bold;
  color: #333;
  margin-bottom: 20px;
}

/* 图表容器 */
.chart-container {
  width: 200px;
  height: 300px;
  position: relative;
}

.chart {
  width: 100%;
  height: 100%;
  border-radius: 50%;
  overflow: hidden;
  position: relative;
}

.chart-item {
  position: absolute;
  width: 100%;
  height: 100%;
  clip-path: polygon(50% 50%, 100% 50%, 100% 0);
  transform-origin: 50% 50%;
}

.info {
  margin-top: 20px;
  font-size: 14px;
  color: #666;
  text-align: center;
}

.line-chart-container {
  margin-top: 20px;
}

/* 详细信息 */
.detail-section {
  /* margin-top: 20px; */
  flex:1;
}

.detail-card {
  background-color: rgb(252, 252, 252);
  border-radius: 12px;
  padding: 20px;
  box-shadow: 0 2px 8px rgba(0,0,0,0.05);
}

.activity-list {
  margin-top: 15px;
}

.activity-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 12px 0;
  border-bottom: 1px solid #eee;
}

.activity-time {
  font-size: 12px;
  color: #999;
}

.activity-content {
  font-size: 14px;
  color: #333;
  flex: 1;
  margin-left: 15px;
} 